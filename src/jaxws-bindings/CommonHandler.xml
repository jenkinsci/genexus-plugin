<?xml version="1.0" encoding="UTF-8"?>
<bindings
    xmlns:xsd="http://www.w3.org/2001/XMLSchema"
    xmlns:jaxb="http://java.sun.com/xml/ns/jaxb"
    xmlns:wsdl="http://schemas.xmlsoap.org/wsdl/"
    xmlns:jaxws="http://java.sun.com/xml/ns/jaxws"
    xmlns="http://java.sun.com/xml/ns/jaxws" >
    <jaxb:bindings node="wsdl:definitions" xmlns:jws="http://java.sun.com/xml/ns/javaee">
        <!-- Use this handler to resolve SOAPHeaders for authentication -->
        <jws:handler-chains>
            <jws:handler-chain>
                <jws:handler>
                    <jws:handler-name>jenkinsci.plugins.genexus.server.services.common.SOAPHeaderHandler</jws:handler-name>
                    <jws:handler-class>org.jenkinsci.plugins.genexus.server.services.common.SOAPHeaderHandler</jws:handler-class>
                </jws:handler>
            </jws:handler-chain>
        </jws:handler-chains>
    </jaxb:bindings>

    <!-- Avoid JAXBElement<T> types. See https://docs.oracle.com/cd/E19355-01/820-1072/6ncp48v9m/index.html -->
    <jaxb:bindings node="//xsd:schema">
        <jaxb:globalBindings generateElementProperty="false" />
    </jaxb:bindings>
        
    <!-- Set package name for common referenced schemas -->
    <!-- We should use these same bindings for all services so they share the generated packages -->
    <jaxb:bindings node="//xsd:schema[@targetNamespace='http://schemas.microsoft.com/2003/10/Serialization/']" schemaLocation="xs:http://schemas.microsoft.com/2003/10/Serialization/">
        <jaxb:schemaBindings>
            <jaxb:package name="org.jenkinsci.plugins.genexus.server.services.serialization"/>
        </jaxb:schemaBindings>
    </jaxb:bindings>
    <jaxb:bindings node="//xsd:schema[@targetNamespace='http://schemas.datacontract.org/2004/07/GeneXus.Server.Contracts']" schemaLocation="xs:http://schemas.datacontract.org/2004/07/GeneXus.Server.Contracts">
        <jaxb:schemaBindings>
            <jaxb:package name="org.jenkinsci.plugins.genexus.server.services.contracts"/>
        </jaxb:schemaBindings>
    </jaxb:bindings>

</bindings>
